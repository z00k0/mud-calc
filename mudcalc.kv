<ItemLabel@MDLabel>:
    font_size: '15sp'
    halign: 'left'
    valign: 'center'
    text_size: self.size
    size_hint_x: .8

<ItemLabelCalc@MDLabel>:
    font_size: '15sp'
    halign: 'center'
    valign: 'center'
    text_size: self.size
    size_hint_x: .2

<ItemInput@MDTextField>:
    font_size: '15sp'
    halign: 'center'
    valign: 'center'
    text_size: self.size
    size_hint_x: .2
    multiline: False
    input_filter: 'float'
    input_type: 'number'

<ItemConfirm>:
    on_release: 
        root.set_icon(check)
        root.set_weighting(self.text)
        app.dialog.dismiss()

    CheckboxLeftWidget:
        id: check
        group: 'check'

<MudCalc>:
    rows: 8
    padding: 20
    spacing: 20

    BoxLayout:

        ItemLabel:
            text: 'Необходимая плотность при утяжелении раствора, г/см3'

        ItemInput:
            id: dens_mix
            text: ''

    BoxLayout:

        ItemLabel:
            text: 'Исходный объем раствора, м3'

        ItemInput:
            id: vol_2
            text: ''

    BoxLayout:

        ItemLabel:
            text: 'Плотность исходного раствора'

        ItemInput:
            id: dens_2
            text: ''

    BoxLayout:

        ItemLabel:
            text: 'Удельный вес утяжелителя, г/см3'

        MDFlatButton:
            id: dens_1
            text: app.dens_1

            on_release: 
                app.dens_1 = self.text
                app.choose_weighting_dialog()

    BoxLayout:

        ItemLabel:
            text: 'Необходимое количество утяжелителя, тн'

        ItemLabelCalc:
            id: m_1
            text: '0'

    BoxLayout:

        ItemLabel:
            text: 'Концентрация утяжелителя, кг/м3'

        ItemLabelCalc:
            id: concentration
            text: '0'

    BoxLayout:

        ItemLabel:
            text: 'Конечный объем раствора, м3'

        ItemLabelCalc:
            id: vol_mix
            text: '0'

    BoxLayout:
        padding: [30, 10, 30, 10]

        MDRaisedButton:
            text: 'Рассчитать'
            on_release: root.calculate()
            size_hint: 1, .8
